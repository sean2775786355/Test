                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>对象</label><br/>
                                    <select id="to" name="to" class="form-control select2" style="width: 40%;">
                                        <c:forEach items="${sailorList}" var="sailor" >
                                            <option value="${sailor.sailor_id}">${sailor.name}</option>
                                        </c:forEach>
                                    </select>

                                </div>
